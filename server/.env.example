# Server Configuration
PORT=3001
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/social-media-automation

# Redis (for job queue)
REDIS_URL=redis://localhost:6379

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-here

# Social Media Platform Credentials (OAuth tokens will be stored in database)
# These are placeholder values - real implementation would use OAuth flows

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Browser Automation
BROWSER_TIMEOUT=30000
BROWSER_HEADLESS=true

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Logging
LOG_LEVEL=info